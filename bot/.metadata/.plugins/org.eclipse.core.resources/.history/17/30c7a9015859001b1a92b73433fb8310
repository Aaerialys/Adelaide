package bot;

import java.util.ArrayList;
import java.util.HashMap;

public class GlobalProblem extends Problem{
	ArrayList<Integer> qualityVotes = new ArrayList<Integer>(),difficultyVotes = new ArrayList<Integer>();
	ArrayList<String> comments = new ArrayList<String>();
	public GlobalProblem(String link) {
		super(link);
	}
	public void addQualityVote(int newVote) {
		qualityVotes.add(newVote);
		for(int i=qualityVotes.size()-1;i>0;i--) if(qualityVotes.get(i)<qualityVotes.get(i-1))
			qualityVotes.set(i-1,qualityVotes.set(i,qualityVotes.get(i-1))); //swap ith element with i-1th
	}
	public void addDifficultyVote(int newDifficulty) {
		difficultyVotes.add(newDifficulty);
		for(int i=difficultyVotes.size()-1;i>0;i--) if(difficultyVotes.get(i)<difficultyVotes.get(i-1))
			difficultyVotes.set(i-1,difficultyVotes.set(i,difficultyVotes.get(i-1))); //swap ith element with i-1th
	}
	public void addComment(String newComment) {
		comments.add(newComment);
	}
	public int getQuality() {
		return qualityVotes.get(qualityVotes.size()/2);
	}
	public int getDifficulty() {
		return difficultyVotes.get(difficultyVotes.size()/2);
	}
	public ArrayList<String> getComments(){
		return comments;
	}
	
}
